<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project chess">
    <property name="dir.buildfile" value="."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/target/chess_run.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="chess.Main"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
	    <fileset dir="${dir.jarfile}/target/classes"/>
            <zipfileset excludes="META-INF/*.SF" src="target/chess-0.0.1-SNAPSHOT-jar-with-dependencies.jar"/>
        </jar>
    </target>
</project>
